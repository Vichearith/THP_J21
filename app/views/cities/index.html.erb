<main role="main">

  <section class="jumbotron text-center" style="background-image: url('https://images.unsplash.com/photo-1468234847176-28606331216a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1915&q=80');background-position: center center; background-size: cover;">
    <div class="container">
      <h1 class="jumbotron-heading text-light">Cities</h1>
      <p class="lead text-light">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
      <%# <p> %>
        <%# <%=link_to "Créer un potin", new_city_path, :class => "btn btn-primary my-2"%> %>
      <%# </p> %>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        <% @cities.each_with_index do |city| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="card-body">
              <h5 class="card-title">              
              <%=link_to "#{city.name}", city_path(city.id), :class => "nav-link" %>
              </h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= city.zip_code %></h6>
              <%=link_to "Card link", city_path(city.id), :class => "nav-link" %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>

</main>