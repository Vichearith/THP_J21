<body class="d-flex flex-column h-100">
  <div class="container">
    <main role="main" class="my-auto">
    <h1 class="mt-5"><%= @cities.find(@index).name%> - <%= @cities.find(@index).zip_code%></h1>
    <p>Cr√©e le <%= @cities.find(@index).created_at.strftime("%d/%m/%Y")%></p>
    Users : 
      <% @cities.find(@index).users.each_with_index do |i,index| %>
        <div class="album py-5">
            <div class="container">
            <%=link_to "#{i.first_name} #{i.last_name}", user_path(index), :class => "h4"%>
              <div class="row">
                <%i.gossips.each do |j| %>
                <div class="col-md-4">
                  <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                      <h5 class="card-title">              
                      <%=link_to "#{j.title}", gossip_path(j.id), :class => "nav-link" %>
                      </h5>
                      <h6 class="card-subtitle mb-2 text-muted"><%= j.user.first_name %> <%= j.user.last_name %></h6>
                      <p class="card-text"><%= j.content %></p>
                      <%=link_to "Card link", gossip_path(j.id), :class => "nav-link" %>
                    </div>
                  </div>
                </div>
                <% end %>
              </div>
            </div>
          </div> 
      <% end %> 
    </main>
  </div>
</body>
